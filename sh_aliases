function vd() {
	vimdiff <(xxd $1) <(xxd $2)
}

function g() {
    xdg-open "http://google.com/search?q=$*" > /dev/null 2>&1
}

function lucky() {  url=$(echo "http://www.google.com/search?hl=en&q=$@&btnI=I%27m+Feeling+Lucky&aq=f&oq=" | sed 's/ /+/g');
    xdg-open $url > /dev/null 2>&1
} 

function debchange () {
     zless "/usr/share/doc/$1/changelog.Debian.gz"
}

