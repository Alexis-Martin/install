alias q='exit'
alias up='sudo apt-get update && sudo apt-get --force-yes dist-upgrade'
alias d='wget -c'
alias c='clear'
alias cl='sudo apt-get autoremove --purge; sudo apt-get purge `deborphan`'
alias m='mount | column -t'
alias l='ls -lah --color'
alias h='htop'
alias df='df -h'
alias grep='grep --color'
alias backup='mount /backup/ && rsync -az --exclude 'tmp' --exclude=".*" --delete-after --delete-excluded ~/ /backup/ ; umount /backup/'
alias v='vim -O'
alias gg='git grep'
alias gs='git status'
alias gb='git branch -av'
alias gd='git diff'
alias gl='git log'
alias gc='git checkout'
alias gp='git pull'
alias gcp='git cherry-pick'
alias t='tree -C'
alias pd='qpdfview'
alias lsbig='du -ha | sort -n -r | head'

function g() {
    xdg-open "http://google.com/search?q=$*" > /dev/null 2>&1
}

function lucky() {  url=$(echo "http://www.google.com/search?hl=en&q=$@&btnI=I%27m+Feeling+Lucky&aq=f&oq=" | sed 's/ /+/g');
    xdg-open $url;
} 

function vp() {
    $@ | vim -R -
 }

 function debchange () {
     zless "/usr/share/doc/$1/changelog.Debian.gz"
}

export MANPAGER="/bin/sh -c \"col -b | vim -c 'set ft=man ts=8 nomod nolist nonu noma' -\""
export EDITOR='vim'
